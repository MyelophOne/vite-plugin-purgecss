{
	"name": "@myelophone/vite-plugin-purgecss",
	"version": "1.0.8",
	"description": "Vite plugin for removing unused CSS from generated bundles with PurgeCSS.",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"./dist/*"
	],
	"scripts": {
		"prepare": "husky",
		"prepublishOnly": "yarn build",
		"build": "tsup",
		"build:dev": "yarn build --watch",
		"test": "vitest run",
		"test:coverage": "yarn test --coverage",
		"test:dev": "vitest watch",
		"test:ui": "vitest --ui",
		"lint": "yarn eslint . --ext js,ts,cjs,mjs",
		"lint:fix": "yarn lint --fix",
		"format": "yarn prettier './**/*.{js,ts,cjs,mjs}'",
		"format:check": "yarn format --check",
		"format:fix": "yarn format --write",
		"update": "yarn upgrade-interactive",
		"self-update": "yarn set version berry"
	},
	"lint-staged": {
		"./**/*.{js,ts,cjs,mjs}": [
			"yarn lint:fix"
		],
		"./**/*.{js,ts,cjs,mjs,json}": [
			"yarn format:fix"
		]
	},
	"keywords": [
		"PurgeCSS",
		"Vite",
		"Vite Plugin",
		"Nuxt"
	],
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@types/node": "^24.0.12",
		"@typescript-eslint/eslint-plugin": "^8.36.0",
		"@typescript-eslint/parser": "^8.36.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.30.1",
		"eslint-plugin-filenames": "^1.3.2",
		"eslint-plugin-import": "^2.32.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"prettier-cli": "^0.1.0",
		"rollup": "^4.44.2",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"url": "^0.11.4",
		"vite": "^7.0.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"purgecss": "^7.0.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/myelophone/vite-plugin-purgecss.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"packageManager": "yarn@4.9.2"
}