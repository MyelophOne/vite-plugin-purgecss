{
  "name": "@myelophone/vite-plugin-purgecss",
  "version": "1.0.12",
  "description": "Vite plugin for removing unused CSS from generated bundles with PurgeCSS.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "./dist/*"
  ],
  "scripts": {
    "prepare": "husky",
    "prepublishOnly": "yarn build",
    "build": "tsup",
    "build:dev": "yarn build --watch",
    "test": "vitest run",
    "test:coverage": "yarn test --coverage",
    "test:dev": "vitest watch",
    "test:ui": "vitest --ui",
    "lint": "yarn eslint . --ext js,ts,cjs,mjs",
    "lint:fix": "yarn lint --fix",
    "format": "yarn prettier './**/*.{js,ts,cjs,mjs}'",
    "format:check": "yarn format --check",
    "format:fix": "yarn format --write",
    "update": "yarn upgrade-interactive",
    "self-update": "yarn set version berry"
  },
  "lint-staged": {
    "./**/*.{js,ts,cjs,mjs}": [
      "yarn lint:fix"
    ],
    "./**/*.{js,ts,cjs,mjs,json}": [
      "yarn format:fix"
    ]
  },
  "keywords": [
    "PurgeCSS",
    "Vite",
    "Vite Plugin",
    "Nuxt"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-cli": "^0.1.0",
    "rollup": "^4.50.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "url": "^0.11.4",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "purgecss": "^7.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/myelophone/vite-plugin-purgecss.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "yarn@4.9.4"
}
